{
	"name": "@openmeteo/mapbox-layer",
	"version": "0.0.1",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/types.d.ts",
	"author": "Open-Meteo <info@open-meteo.com>",
	"module": "dist/index.js",
	"repository": "git://github.com/open-meteo/mapbox-layer",
	"description": "Protocol to read OMfiles and parse them to tiles for Mapbox / Maplibre",
	"keywords": [
		"open-meteo",
		"meteorological-data",
		"weather-maps",
		"omfile"
	],
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"dev": "vite build --watch",
		"test": "vitest",
		"build:esm": "vite build",
		"build:umd": "vite build --config vite.config.umd.ts",
		"build": "npm run build:esm && npm run build:umd",
		"prepare": "npm run build"
	},
	"devDependencies": {
		"@types/node": "^24.8.1",
		"prettier": "^3.6.2",
		"typescript": "5.9.3",
		"vite": "^7.1.10",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@openmeteo/file-reader": "^0.0.12",
		"maplibre-gl": "^5.9.0"
	}
}
