{
	"name": "@openmeteo/mapbox-layer",
	"version": "0.0.1",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"module": "./dist/index.mjs",
		"require": "./dist/index.cjs",
		"types": "./dist/index.d.ts",
		"browser": "./dist/index.min.js"
	},
	"author": "Open-Meteo <info@open-meteo.com>",
	"repository": "git://github.com/open-meteo/mapbox-layer",
	"description": "Protocol to read OMfiles and parse them to tiles for Mapbox / Maplibre",
	"keywords": [
		"open-meteo",
		"meteorological-data",
		"weather-maps",
		"omfile"
	],
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"bench": "npm run build && node benchmark.js",
		"build": "rm -rf dist && rollup -c && npm run generate-types && tsc --project tsconfig.dist.json",
		"test-build-v3": "cd test-project-maplibre-3 && rm -rf node_modules && rm -rf package-lock.json && npm i && npm test",
		"test-build": "cd test-project && rm -rf node_modules && rm -rf package-lock.json && npm i && npm test",
		"generate-types": "tsc --emitDeclarationOnly --declaration --outDir dist && rm -rf dist/*{.t,-j}est.d.ts",
		"jest": "jest",
		"jest:watch": "jest --watch",
		"test": "run-p typecheck lint jest checkformat",
		"lint": "eslint src",
		"format": "prettier src --write",
		"checkformat": "prettier src --check",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.8",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.4",
		"jest": "^30.2.0",
		"prettier": "^3.6.2",
		"rollup": "^4.52.4",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"@openmeteo/file-reader": "^0.0.12",
		"maplibre-gl": "^5.9.0"
	}
}
